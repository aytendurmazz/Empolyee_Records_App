<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reminder_title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/reminder_ad_soyad_label"
        android:textColor="@android:color/widget_edittext_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/reminder_date"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reminder_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reminder_date"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:text="Ise BaslangÄ±c :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reminder_title" />

    <TextView
        android:id="@+id/textViewCinsiyet"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reminder_date" />

    <TextView
        android:id="@+id/textViewAdres"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Adres :"
        app:layout_constraintEnd_toEndOf="@+id/textViewCinsiyet"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewCinsiyet"
        app:layout_constraintTop_toBottomOf="@+id/textViewCinsiyet" />

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ID:"
        app:layout_constraintEnd_toEndOf="@+id/textViewAdres"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewAdres"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdres" />

</androidx.constraintlayout.widget.ConstraintLayout>